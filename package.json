{
  "name": "@percy/puppeteer",
  "version": "1.0.7",
  "description": "Percy.io integration with Google Puppeteer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/percy/percy-puppeteer.git"
  },
  "keywords": [
    "puppeteer",
    "testing"
  ],
  "author": "Perceptual Inc.",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@types/puppeteer": "^1.9.1",
    "chai": "^4.2.0",
    "http-server": "^0.11.1",
    "mocha": "^6.0.2",
    "puppeteer": "^1.11.0",
    "semantic-release": "^15.13.3",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "percy exec -- mocha --opts ./mocha.opts tests/*spec.js",
    "test-win": "npm run pretest && percy exec -- mocha.cmd --opts ./mocha.opts tests/*spec.js"
  },
  "peerDependencies": {
    "puppeteer": ">=1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@percy/agent": "^0.2.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
